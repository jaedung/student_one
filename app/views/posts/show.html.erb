<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="mt-3">Post</h3>
    </div>
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @post.title %></h5>
          <p class="card-text"><%= @post.content %></p>
          <a href="/posts/<%= @post.id %>/edit" class="btn btn-success">Edit</a>
          <a href="/posts/<%= @post.id %>/destroy" class="btn btn-danger">Delete</a>
        </div>
      </div>
    </div>
  </div>
</div>